{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist"
  },
  "include": [
    "main.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "web",
    "dist"
  ]
}

